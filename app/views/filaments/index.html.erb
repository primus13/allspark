<h1>Listing filaments</h1>
 <%= link_to 'New filament', new_filament_path %>
<table>
  <tr>
  	<th>Manufacturer</th>
    <th>Name</th>
    <th>Description</th>
    <th>Material</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
 
  <% @filaments.each do |filament| %>
    <tr>
    	<td><%= link_to filament.manufacturer.name, manufacturer_path(filament.manufacturer) %></td>
      <td><%= link_to filament.name, filament_path(filament) %></td>
      <td><%= filament.description %></td>
      <td><%= link_to filament.material.name, material_path(filament.material) %></td>
      <td><%= link_to 'Show', filament_path(filament) %></td>
      <td><%= link_to 'Edit', edit_filament_path(filament) %></td>
      <td><%= link_to 'Destroy', filament_path(filament), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>