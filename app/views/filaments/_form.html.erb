<%= form_for @filament do |f| %>
  <% if @filament.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@filament.errors.count, "error") %> prohibited
        this filament from being saved:
      </h2>
      <ul>
        <% @filament.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p><%= f.label :category %><br>
  	<%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => true) %><br>
  </p>
  <p><%= f.label :manufacturer %><br>
  	<%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name, :prompt => true) %><br>
  </p>
  <p><%= f.label :material %><br>
  	<%= f.collection_select(:material_id, Material.all, :id, :name, :prompt => true) %><br>
  </p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>