<p id="notice"><%= notice %></p>

<h1>Listing Userfiles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @userfiles.each do |userfile| %>
      <tr>
        <td><%= userfile.title %></td>
        <td><%= userfile.description %></td>
        <td><%= userfile.project %></td>
        <td><%= link_to 'Show', userfile %></td>
        <td><%= link_to 'Edit', edit_userfile_path(userfile) %></td>
        <td><%= link_to 'Destroy', userfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

