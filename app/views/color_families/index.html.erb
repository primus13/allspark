<h1>Listing colorfamilies</h1>
 <%= link_to 'New colorfamily', new_colorfamily_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
 
  <% @colorfamilies.each do |colorfamily| %>
    <tr>
      <td><%= link_to colorfamily.name, colorfamily_path(colorfamily) %></td>
      <td><%= colorfamily.description %></td>
      <td><%= link_to 'Show', colorfamily_path(colorfamily) %></td>
      <td><%= link_to 'Edit', edit_colorfamily_path(colorfamily) %></td>
      <td><%= link_to 'Destroy', colorfamily_path(colorfamily), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>