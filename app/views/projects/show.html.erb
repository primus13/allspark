<h1><%= @project.title %></h1>

<p>
  <%= @project.description %>
</p>

<p>
    <%= image_tag @project.image.url(:original) %>
</p>

<h2>Files</h2>

<% if @project.userfiles.empty? %>
<p>No Files attached yet.</p>
<% else %>
    <ul>
    <% @project.userfiles.each do |userfile| %>
        <li><%= link_to userfile.title, userfile.file.url %>
    <% end %>
    </ul>
<% end %>
<% if current_user == @project.user %>
    <%= link_to 'Add file', new_project_userfile_path(@project) %><br />
    <%= link_to 'Edit Project', edit_project_path(@project) %>
<% end %>
